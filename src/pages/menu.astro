---
import Layout from '@/layouts/Layout.astro';
import MenuContent from '@components/sections/MenuContent.astro';

import { menu } from '@/data/menu';
import MenuSection from '@/components/sections/MenuSection.astro';

const { appetizers, mainCourses, desserts, coffeeOptions, drinks } = menu;

const metadata = {
  title: 'Menu',
  description:
    'Our menu is a collection of traditional Italian dishes, with a modern twist. We use only the freshest ingredients, and our pasta is made in-house daily.',
};

const options = [
  {
    title: 'Appetizers',
    subtitle: 'Start your meal off right with one of our delicious appetizers.',
    tagline: '',
    items: appetizers,
  },
  {
    title: 'Mains',
    subtitle: 'Our main courses are made with the freshest ingredients, and our pasta is made in-house daily.',
    tagline: '',
    items: mainCourses,
  },
  {
    title: 'Desserts',
    subtitle: 'Finish your meal off with one of our delicious desserts.',
    tagline: '',
    items: desserts,
  },
  {
    title: 'Drinks',
    subtitle: 'We have a wide selection of drinks to choose from.',
    tagline: '',
    items: drinks,
  },
  {
    title: 'Caffe',
    subtitle: 'We have a wide selection of caffe options to choose from.',
    tagline: 'Somehting else?',
    items: coffeeOptions,
  },
];
---

<Layout metadata={metadata}>
  <MenuContent
    title="Menu"
    subtitle="Our menu is a collection of traditional Italian dishes, with a modern twist. We use only the freshest ingredients, and our pasta is made in-house daily."
  >
    <Fragment slot="content">
      <div class="flex flex-col md:flex-row space-x-0 space-y-2 md:space-x-2 md:space-y-0 content-between">
        {
          options.map((type) => (
            <a
              href={`#${type.title}`}
              class="min-w-24 bg-slate-100 p-2  md:p-6 lg:p-10 rounded flex-1 hover:bg-slate-200 cursor-pointer text-center"
            >
              <div class=" text-slate-800 text-2xl">{type.title}</div>
            </a>
          ))
        }
      </div>
    </Fragment>
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-slate-200 dark:bg-slate-800"></div>
    </Fragment>
  </MenuContent>

  {options.map((type) => <MenuSection {...type} id={type.title} />)}
</Layout>
 @/data/menu
