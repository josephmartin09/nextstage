---
import Layout from '@/layouts/Layout.astro';
import { getHomePermalink } from '@/utils/permalinks';

const title = `Thank you`;
---

<Layout metadata={{ title }}>
  <section class="flex items-center h-full p-16">
    <div class="container flex flex-col items-center justify-center px-5 mx-auto my-8">
      <div class="max-w-md text-center">
        <p class="text-3xl font-semibold md:text-3xl">Thank you, your request has been received! We'll contact you for an intro call as soon as we can.</p>
        <a rel="noopener noreferrer" href={getHomePermalink()} class="btn dark:bg-primary border dark:border-none ml-4 m-6">Back to homepage</a>
      </div>
    </div>
  </section>
</Layout>
