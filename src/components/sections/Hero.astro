import hero_img from "@assets/hero_2.jpeg";
---

<div class="relative">
  <Image
    src={hero_img}
    alt="Ramen Life"
    class="w-full h-full fit-cover object-cover object-center rounded-2xl rounded-tl-none rounded-tr-none opacity-100 filter-none mix-blend-darken max-h-[500px]"
    width="500"
    height="500"
  />
  <div
    class="absolute top-1/2 left-1/2 -translate-y-1/2 -translate-x-1/2 text-white"
